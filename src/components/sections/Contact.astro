---

<section id="contact" class="section-padding relative">
  <div class="absolute inset-0 pointer-events-none" style="background: var(--surface-2); opacity: 0.3;"></div>
  <div class="max-w-6xl mx-auto px-6 relative z-10">
    <div class="max-w-xl">
      <h2
        class="reveal text-3xl md:text-4xl font-700 mb-4"
        style="font-family: var(--font-display);"
      >
        Get in touch<span class="text-[var(--color-accent)]">.</span>
      </h2>
      <p
        class="reveal reveal-delay-1 text-[var(--muted)] mb-8"
        style="font-family: var(--font-body);"
      >
        Have a project in mind or want to discuss an opportunity? Drop me a message.
      </p>

      <form class="reveal reveal-delay-2 space-y-4" id="contact-form">
        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <label for="name" class="block text-xs text-[var(--muted)] uppercase tracking-widest mb-2" style="font-family: var(--font-mono);">
              Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 rounded-lg border border-[var(--border)] bg-[var(--surface)] text-[var(--text)] placeholder:text-[var(--muted)] focus:outline-none focus:border-[var(--color-accent)] transition-colors duration-200"
              style="font-family: var(--font-body);"
              placeholder="Your name"
            />
          </div>
          <div>
            <label for="email" class="block text-xs text-[var(--muted)] uppercase tracking-widest mb-2" style="font-family: var(--font-mono);">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-lg border border-[var(--border)] bg-[var(--surface)] text-[var(--text)] placeholder:text-[var(--muted)] focus:outline-none focus:border-[var(--color-accent)] transition-colors duration-200"
              style="font-family: var(--font-body);"
              placeholder="you@example.com"
            />
          </div>
        </div>

        <div>
          <label for="subject" class="block text-xs text-[var(--muted)] uppercase tracking-widest mb-2" style="font-family: var(--font-mono);">
            Subject
          </label>
          <input
            type="text"
            id="subject"
            name="subject"
            required
            class="w-full px-4 py-3 rounded-lg border border-[var(--border)] bg-[var(--surface)] text-[var(--text)] placeholder:text-[var(--muted)] focus:outline-none focus:border-[var(--color-accent)] transition-colors duration-200"
            style="font-family: var(--font-body);"
            placeholder="Project inquiry"
          />
        </div>

        <div>
          <label for="message" class="block text-xs text-[var(--muted)] uppercase tracking-widest mb-2" style="font-family: var(--font-mono);">
            Message
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full px-4 py-3 rounded-lg border border-[var(--border)] bg-[var(--surface)] text-[var(--text)] placeholder:text-[var(--muted)] focus:outline-none focus:border-[var(--color-accent)] transition-colors duration-200 resize-none"
            style="font-family: var(--font-body);"
            placeholder="Tell me about your project..."
          ></textarea>
        </div>

        <button
          type="submit"
          class="inline-flex items-center gap-2 px-6 py-3 text-sm font-medium rounded-lg transition-all duration-200 border-2 border-[var(--color-accent)] text-[var(--color-dark-bg)] hover:shadow-lg cursor-pointer"
          style="background: var(--color-accent); font-family: var(--font-body);"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><line x1="22" y1="2" x2="11" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/></svg>
          Send Message
        </button>
      </form>
    </div>
  </div>
</section>

<script>
  function initContactForm() {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    if (!form) return;

    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      const subject = formData.get('subject') as string;
      const body = `Name: ${formData.get('name')}\nEmail: ${formData.get('email')}\n\n${formData.get('message')}`;
      window.location.href = `mailto:faizalardianputra@yahoo.co.id?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
    });
  }

  initContactForm();
  document.addEventListener('astro:after-swap', initContactForm);
</script>
