---
---

<section id="hero" class="min-h-screen flex items-center pt-16 relative overflow-hidden">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-1/4 -right-32 w-96 h-96 rounded-full opacity-10 blur-3xl" style="background: var(--color-accent);"></div>
    <div class="absolute bottom-1/4 -left-32 w-72 h-72 rounded-full opacity-5 blur-3xl" style="background: var(--color-violet);"></div>
  </div>

  <div class="max-w-6xl mx-auto px-6 w-full relative z-10">
    <div class="grid lg:grid-cols-[1fr_auto] gap-12 lg:gap-16 items-center">
      <!-- Text content -->
      <div class="space-y-8">
        <!-- Greeting tag -->
        <div class="reveal">
          <span
            class="inline-block text-xs font-mono tracking-widest uppercase px-3 py-1 rounded-full border border-[var(--color-accent)] text-[var(--color-accent)]"
            style="font-family: var(--font-mono);"
          >
            Backend Developer
          </span>
        </div>

        <!-- Name -->
        <h1
          class="reveal reveal-delay-1 text-5xl md:text-6xl lg:text-7xl font-800 leading-none"
          style="font-family: var(--font-display); letter-spacing: -0.03em;"
        >
          Faizal Ardian<br/>
          <span class="gradient-text">Putra</span>
        </h1>

        <!-- Bio -->
        <p
          class="reveal reveal-delay-2 text-lg md:text-xl text-[var(--muted)] max-w-lg leading-relaxed"
          style="font-family: var(--font-body);"
        >
          Building robust REST APIs and scalable backend systems with PHP and Laravel.
          5+ years crafting enterprise solutions for travel, government, and fintech.
        </p>

        <!-- Social links -->
        <div class="reveal reveal-delay-3 flex items-center gap-4">
          <a
            href="https://github.com/faizal97"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
            class="w-10 h-10 flex items-center justify-center rounded-lg border border-[var(--border)] text-[var(--muted)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] transition-all duration-200"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12z"/></svg>
          </a>
          <a
            href="https://linkedin.com/in/faizalardian"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            class="w-10 h-10 flex items-center justify-center rounded-lg border border-[var(--border)] text-[var(--muted)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] transition-all duration-200"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
          <a
            href="mailto:faizalardianputra@yahoo.co.id"
            aria-label="Email"
            class="w-10 h-10 flex items-center justify-center rounded-lg border border-[var(--border)] text-[var(--muted)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] transition-all duration-200"
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
          </a>
        </div>

        <!-- CTA buttons -->
        <div class="reveal reveal-delay-4 flex flex-wrap gap-4">
          <a
            href="/resume.pdf"
            download="Faizal_Ardian_Putra_Resume.pdf"
            class="inline-flex items-center gap-2 px-6 py-3 text-sm font-medium rounded-lg transition-all duration-200 border-2 border-[var(--color-accent)] text-[var(--color-dark-bg)] hover:shadow-lg"
            style="background: var(--color-accent); font-family: var(--font-body);"
          >
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
            Download Resume
          </a>
          <a
            href="/projects"
            class="inline-flex items-center gap-2 px-6 py-3 text-sm font-medium rounded-lg border border-[var(--border)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] transition-all duration-200"
            style="font-family: var(--font-body);"
          >
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
            View Projects
          </a>
        </div>
      </div>

      <!-- Profile photo -->
      <div class="reveal reveal-delay-2 flex justify-center lg:justify-end">
        <div class="relative">
          <!-- Decorative border -->
          <div class="absolute -inset-2 rounded-2xl border border-[var(--color-accent)] opacity-20 rotate-3"></div>
          <img
            src="/profile_photo.webp"
            alt="Faizal Ardian Putra"
            width="280"
            height="280"
            class="relative rounded-2xl object-cover w-60 h-60 md:w-72 md:h-72 grayscale hover:grayscale-0 transition-all duration-500"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </div>
</section>
