---
import BaseLayout from '@layouts/BaseLayout.astro';
import StructuredData from '@components/StructuredData.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts
    .filter((p) => !p.data.draft)
    .map((post) => ({
      params: { slug: post.id },
      props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await render(post);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout
  title={`${post.data.title} — Faizal Ardian Putra`}
  description={post.data.description}
  article={true}
>
  <Fragment slot="head">
    <StructuredData
      type="article"
      title={post.data.title}
      description={post.data.description}
      pubDate={post.data.pubDate}
      updatedDate={post.data.updatedDate}
    />
  </Fragment>

  <article class="pt-32 pb-20">
    <div class="max-w-3xl mx-auto px-6">
      <!-- Back link -->
      <a
        href="/blog"
        class="reveal inline-flex items-center gap-2 text-sm text-[var(--muted)] hover:text-[var(--color-accent)] transition-colors duration-200 mb-8"
        style="font-family: var(--font-mono);"
      >
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><line x1="19" y1="12" x2="5" y2="12"/><polyline points="12 19 5 12 12 5"/></svg>
        Back to blog
      </a>

      <!-- Header -->
      <header class="reveal reveal-delay-1 mb-12">
        <time
          class="text-xs text-[var(--muted)]"
          style="font-family: var(--font-mono);"
          datetime={post.data.pubDate.toISOString()}
        >
          {formatDate(post.data.pubDate)}
          {post.data.updatedDate && (
            <span> · Updated {formatDate(post.data.updatedDate)}</span>
          )}
        </time>
        <h1
          class="text-3xl md:text-4xl lg:text-5xl font-700 mt-3 text-balance"
          style="font-family: var(--font-display); letter-spacing: -0.02em;"
        >
          {post.data.title}
        </h1>
        <p
          class="text-lg text-[var(--muted)] mt-4"
          style="font-family: var(--font-body);"
        >
          {post.data.description}
        </p>
        {post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-4">
            {post.data.tags.map((tag) => (
              <span
                class="text-xs px-2 py-0.5 rounded border border-[var(--border)] text-[var(--muted)]"
                style="font-family: var(--font-mono);"
              >
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>

      <!-- Content -->
      <div class="reveal reveal-delay-2 prose">
        <Content />
      </div>
    </div>
  </article>
</BaseLayout>
