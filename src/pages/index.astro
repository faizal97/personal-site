---
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/sections/Hero.astro';
import About from '@components/sections/About.astro';
import Skills from '@components/sections/Skills.astro';
import Experience from '@components/sections/Experience.astro';
import FeaturedProjects from '@components/sections/FeaturedProjects.astro';
import RecentPosts from '@components/sections/RecentPosts.astro';
import Contact from '@components/sections/Contact.astro';
---

<BaseLayout>
  <Hero />

  <section class="section-padding border-t border-[var(--border)]">
    <div class="grid-max">
      <div class="grid lg:grid-cols-[2fr_1fr] gap-0">
        <div class="lg:border-r border-[var(--border)] lg:pr-12">
          <About />
        </div>
        <div class="lg:pl-12 mt-12 lg:mt-0">
          <Skills />
        </div>
      </div>
    </div>
  </section>

  <Experience />
  <FeaturedProjects />

  <section class="section-padding border-t border-[var(--border)]">
    <div class="grid-max">
      <div class="grid lg:grid-cols-[1.2fr_1fr] gap-0">
        <div class="lg:pr-12">
          <RecentPosts />
        </div>
        <div class="lg:pl-12 lg:border-l border-[var(--border)] mt-12 lg:mt-0">
          <Contact />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
