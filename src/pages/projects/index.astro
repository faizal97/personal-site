---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { fetchGitHubRepos } from '@lib/github';

const featuredProjects = (await getCollection('projects'))
  .filter((p) => p.data.featured)
  .sort((a, b) => a.data.order - b.data.order);

const githubRepos = await fetchGitHubRepos();

const languageColors: Record<string, string> = {
  PHP: '#4F5D95',
  JavaScript: '#f1e05a',
  TypeScript: '#3178c6',
  Python: '#3572A5',
  HTML: '#e34c26',
  CSS: '#563d7c',
  Shell: '#89e051',
  Vue: '#41b883',
  Blade: '#f7523f',
};
---

<BaseLayout
  title="Projects — Faizal Ardian Putra"
  description="Featured projects and open source work by Faizal Ardian Putra."
>
  <section class="pt-32 pb-20">
    <div class="max-w-6xl mx-auto px-6">
      <h1
        class="reveal text-4xl md:text-5xl font-700 mb-4"
        style="font-family: var(--font-display);"
      >
        Projects<span class="text-[var(--color-accent)]">.</span>
      </h1>
      <p
        class="reveal reveal-delay-1 text-[var(--muted)] mb-16"
        style="font-family: var(--font-body);"
      >
        Professional work and open source contributions.
      </p>

      <!-- Featured Projects -->
      <div class="mb-20">
        <h2
          class="reveal text-xs uppercase tracking-widest text-[var(--muted)] mb-8"
          style="font-family: var(--font-mono);"
        >
          Featured Work
        </h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {featuredProjects.map((project, index) => (
            <div
              class={`reveal reveal-delay-${Math.min(index + 1, 5)} card-base rounded-lg p-6 flex flex-col h-full`}
            >
              <div class="mb-4">
                <div class="flex items-center gap-2 mb-2">
                  <span
                    class="text-[10px] uppercase tracking-widest px-2 py-0.5 rounded-full border border-[var(--color-accent)] text-[var(--color-accent)]"
                    style="font-family: var(--font-mono);"
                  >
                    {project.data.status === 'confidential' ? 'Confidential' : 'Open Source'}
                  </span>
                </div>
                <h3
                  class="text-lg font-700"
                  style="font-family: var(--font-display);"
                >
                  {project.data.title}
                </h3>
                <p
                  class="text-xs text-[var(--muted)] mt-1"
                  style="font-family: var(--font-mono);"
                >
                  {project.data.role} · {project.data.scale}
                </p>
              </div>

              <p
                class="text-sm text-[var(--muted)] leading-relaxed mb-4 flex-1"
                style="font-family: var(--font-body);"
              >
                {project.data.description}
              </p>

              <div class="flex flex-wrap gap-2 mb-4">
                {project.data.technologies.map((tech) => (
                  <span
                    class="text-xs px-2 py-0.5 rounded border border-[var(--border)] text-[var(--muted)]"
                    style="font-family: var(--font-mono);"
                  >
                    {tech}
                  </span>
                ))}
              </div>

              {project.data.liveUrl && (
                <a
                  href={project.data.liveUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-xs text-[var(--color-accent)] hover:underline"
                  style="font-family: var(--font-mono);"
                >
                  <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
                  View Live
                </a>
              )}
            </div>
          ))}
        </div>
      </div>

      <!-- GitHub Repos -->
      {githubRepos.length > 0 && (
        <div>
          <h2
            class="reveal text-xs uppercase tracking-widest text-[var(--muted)] mb-8"
            style="font-family: var(--font-mono);"
          >
            Open Source
          </h2>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            {githubRepos.map((repo, index) => (
              <a
                href={repo.html_url}
                target="_blank"
                rel="noopener noreferrer"
                class={`reveal reveal-delay-${Math.min((index % 3) + 1, 5)} card-base rounded-lg p-5 flex flex-col h-full group`}
              >
                <div class="flex items-start justify-between mb-2">
                  <h3
                    class="text-sm font-600 group-hover:text-[var(--color-accent)] transition-colors duration-200 truncate"
                    style="font-family: var(--font-display);"
                  >
                    {repo.name}
                  </h3>
                  {repo.stargazers_count > 0 && (
                    <span
                      class="flex items-center gap-1 text-xs text-[var(--muted)] shrink-0 ml-2"
                      style="font-family: var(--font-mono);"
                    >
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                      {repo.stargazers_count}
                    </span>
                  )}
                </div>

                {repo.description && (
                  <p
                    class="text-xs text-[var(--muted)] leading-relaxed flex-1 line-clamp-2 mb-3"
                    style="font-family: var(--font-body);"
                  >
                    {repo.description}
                  </p>
                )}

                {repo.language && (
                  <div class="flex items-center gap-2 mt-auto">
                    <span
                      class="w-2.5 h-2.5 rounded-full"
                      style={`background-color: ${languageColors[repo.language] || '#666'};`}
                    ></span>
                    <span
                      class="text-xs text-[var(--muted)]"
                      style="font-family: var(--font-mono);"
                    >
                      {repo.language}
                    </span>
                  </div>
                )}
              </a>
            ))}
          </div>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
