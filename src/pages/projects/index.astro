---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { fetchGitHubRepos } from '@lib/github';

const featuredProjects = (await getCollection('projects'))
  .filter((p) => p.data.featured)
  .sort((a, b) => a.data.order - b.data.order);

const githubRepos = await fetchGitHubRepos();

const languageColors: Record<string, string> = {
  PHP: '#4F5D95',
  JavaScript: '#f1e05a',
  TypeScript: '#3178c6',
  Python: '#3572A5',
  HTML: '#e34c26',
  CSS: '#563d7c',
  Shell: '#89e051',
  Vue: '#41b883',
  Blade: '#f7523f',
};
---

<BaseLayout
  title="Projects — Faizal Ardian Putra"
  description="Featured projects and open source work by Faizal Ardian Putra."
>
  <section class="pt-32 pb-20">
    <div class="grid-max">
      <div class="mb-16">
        <div class="reveal-up">
          <span class="heading-section accent-line">Work</span>
        </div>
        <h1 class="reveal-up reveal-delay-1 heading-xl mt-4">
          Selected<br/>work
        </h1>
        <p class="reveal-up reveal-delay-2 text-[var(--muted)] mt-4 max-w-lg">
          Professional work and open source contributions.
        </p>
      </div>

      <div class="mb-20">
        <div class="reveal-up">
          <span class="heading-section">Featured Work</span>
        </div>

        <div class="grid md:grid-cols-2 gap-6 mt-8">
          {featuredProjects.map((project, index) => (
            <div
              class={`reveal-up reveal-delay-${Math.min(index + 1, 5)} card-brutal p-8 flex flex-col min-h-[280px]`}
            >
              <div class="font-mono text-[0.625rem] text-[var(--muted)] mb-4">
                // {project.data.status === 'confidential' ? 'Confidential' : 'Open Source'}
              </div>
              <h3 class="font-display text-xl font-bold mb-2">
                {project.data.title}
              </h3>
              <p class="font-mono text-xs text-[var(--color-accent)] mb-3">
                {project.data.role} · {project.data.scale}
              </p>
              <p class="text-sm text-[var(--muted)] leading-relaxed mb-6 flex-1">
                {project.data.description}
              </p>
              <div class="border-t border-[var(--border)] pt-4">
                <div class="flex flex-wrap gap-2">
                  {project.data.technologies.map((tech) => (
                    <span class="text-xs px-2 py-1 border border-[var(--border)] text-[var(--muted)] font-mono">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
              {project.data.liveUrl && (
                <a
                  href={project.data.liveUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 mt-4 font-mono text-xs text-[var(--color-accent)] hover:underline"
                >
                  View Live ↗
                </a>
              )}
            </div>
          ))}
        </div>
      </div>

      {githubRepos.length > 0 && (
        <div>
          <div class="reveal-up">
            <span class="heading-section">Open Source</span>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 mt-8">
            {githubRepos.map((repo, index) => (
              <a
                href={repo.html_url}
                target="_blank"
                rel="noopener noreferrer"
                class={`reveal-up reveal-delay-${Math.min((index % 3) + 1, 5)} card-glass rounded-lg p-5 flex flex-col h-full group`}
              >
                <div class="flex items-start justify-between mb-2">
                  <h3 class="text-sm font-bold font-display group-hover:text-[var(--color-accent)] transition-colors duration-200 truncate">
                    {repo.name}
                  </h3>
                  {repo.stargazers_count > 0 && (
                    <span class="flex items-center gap-1 text-xs text-[var(--muted)] font-mono shrink-0 ml-2">
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                      {repo.stargazers_count}
                    </span>
                  )}
                </div>

                {repo.description && (
                  <p class="text-xs text-[var(--muted)] leading-relaxed flex-1 line-clamp-2 mb-3">
                    {repo.description}
                  </p>
                )}

                {repo.language && (
                  <div class="flex items-center gap-2 mt-auto">
                    <span
                      class="w-2.5 h-2.5 rounded-full"
                      style={`background-color: ${languageColors[repo.language] || '#666'};`}
                    ></span>
                    <span class="text-xs text-[var(--muted)] font-mono">
                      {repo.language}
                    </span>
                  </div>
                )}
              </a>
            ))}
          </div>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
