---
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="404 â€” Page Not Found">
  <section class="min-h-screen flex items-center justify-center pt-16">
    <div class="text-center px-6">
      <h1
        class="text-8xl md:text-9xl font-800 text-[var(--color-accent)] mb-4"
        style="font-family: var(--font-display);"
      >
        404
      </h1>
      <p
        class="text-lg text-[var(--muted)] mb-8"
        style="font-family: var(--font-body);"
      >
        This page doesn't exist.
      </p>
      <a
        href="/"
        class="inline-flex items-center gap-2 px-6 py-3 text-sm font-medium rounded-lg border border-[var(--border)] hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] transition-all duration-200"
        style="font-family: var(--font-body);"
      >
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><line x1="19" y1="12" x2="5" y2="12"/><polyline points="12 19 5 12 12 5"/></svg>
        Go Home
      </a>
    </div>
  </section>
</BaseLayout>
