---
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="404 — Page Not Found">
  <section class="min-h-screen flex items-center justify-center pt-16 relative overflow-hidden">
    <div class="absolute inset-0 dot-grid opacity-30 pointer-events-none"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 border-2 border-[var(--color-accent)] opacity-10 rotate-45 pointer-events-none"></div>

    <div class="text-center px-6 relative z-10">
      <div class="glitch-wrapper relative mb-8">
        <h1
          class="text-[12rem] md:text-[16rem] font-extrabold leading-none font-display text-[var(--color-accent)] select-none"
          data-text="404"
        >
          404
        </h1>
        <span class="glitch-layer glitch-layer-1 absolute inset-0 text-[12rem] md:text-[16rem] font-extrabold leading-none font-display text-[var(--color-accent)] select-none pointer-events-none" aria-hidden="true">404</span>
        <span class="glitch-layer glitch-layer-2 absolute inset-0 text-[12rem] md:text-[16rem] font-extrabold leading-none font-display text-[var(--color-violet)] select-none pointer-events-none" aria-hidden="true">404</span>
      </div>

      <p class="font-mono text-sm text-[var(--muted)] uppercase tracking-widest mb-2">
        You've drifted into the void
      </p>
      <p class="text-[var(--muted)] mb-8">
        This page doesn't exist or has been moved.
      </p>
      <a href="/" class="btn-ghost">
        ← Return Home
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes glitch-1 {
    0%, 100% { clip-path: inset(0 0 0 0); transform: none; }
    20% { clip-path: inset(20% 0 60% 0); transform: translate(-3px, 2px); }
    40% { clip-path: inset(60% 0 10% 0); transform: translate(3px, -1px); }
    60% { clip-path: inset(40% 0 30% 0); transform: translate(-2px, 1px); }
    80% { clip-path: inset(10% 0 70% 0); transform: translate(2px, -2px); }
  }

  @keyframes glitch-2 {
    0%, 100% { clip-path: inset(0 0 0 0); transform: none; }
    25% { clip-path: inset(50% 0 20% 0); transform: translate(3px, 1px); }
    50% { clip-path: inset(10% 0 60% 0); transform: translate(-2px, -1px); }
    75% { clip-path: inset(70% 0 5% 0); transform: translate(2px, 2px); }
  }

  .glitch-layer-1 {
    animation: glitch-1 4s infinite linear;
    opacity: 0.7;
  }

  .glitch-layer-2 {
    animation: glitch-2 4s infinite linear;
    animation-delay: 0.1s;
    opacity: 0.5;
  }
</style>
